
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_LayoutFrontDesignBlank.cshtml";
}

<div class="container">
    <h2>Login</h2>
    <form action="@Url.Action("login","home")" method="post">
        <div class="form-group">
            <label for="email">User Name</label>
            <input type="text" class="form-control" id="email" placeholder="Enter email" name="UserName">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="Password">
        </div>



        <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <label for="pwd">@ViewBag.msg</label>
</div>